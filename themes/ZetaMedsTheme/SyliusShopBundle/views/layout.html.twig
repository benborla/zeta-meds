{% set current_path = app.request.get('_route') %}
<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
<head>
    <title>{% block title %}Zeta Meds{% endblock %}</title>
	<meta charset="UTF-8">
	<meta name="description" content=" Divisima | eCommerce Template">
	<meta name="keywords" content="divisima, eCommerce, creative, html">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
    <link href="{{ asset('zetameds-theme/images/favicon.ico', 'zetaMedsTheme') }}" rel="shortcut icon"/>

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Raleway:300,300i,400,400i,700,700i" rel="stylesheet">


	<!-- Stylesheets -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app', null, 'zetaMedsTheme') }}

        {{ sonata_block_render_event('sylius.shop.layout.stylesheets') }}
    {% endblock %}

    {{ sonata_block_render_event('sylius.shop.layout.head') }}


	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<body>
	<!-- Page Preloder -->
	<div id="preloder">
		<div class="loader"></div>
	</div>

	<!-- Header section -->
{% block header %}
    <div class="mb-2">
        <div class="container">
            <header class="my-4">
                {% include '@SyliusShop/_header.html.twig' %}

                {{ sonata_block_render_event('sylius.shop.layout.after_header') }}
            </header>
        </div>

        <div class="border-top border-bottom bg-primary">
            <div class="container">
                {{ render(url('sylius_shop_partial_taxon_index_by_code', {'code': 'category', 'template': '@SyliusShop/Taxon/_horizontalMenu.html.twig'})) }}
            </div>
        </div>
    </div>
{% endblock %}
{% if current_path == 'sylius_shop_homepage' %}
	<!-- Hero section -->
	<section class="hero-section">
		<div class="hero-slider owl-carousel">
			<div class="hs-item set-bg" data-setbg="{{ asset('zetameds-theme/images/slider-1.png', 'zetaMedsTheme') }}">
				<div class="container">
					<div class="row">
						<div class="col-xl-6 col-lg-7 text-white">
							<h2 class="drop-shadow">Zeta Meds</h2>
							<p class="drop-shadow">Zeta is an American company and a licensed pharmacy dedicated to providing its customers with a service unmatched by our competitors.</p>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item set-bg" data-setbg="{{ asset('zetameds-theme/images/slider-2.png', 'zetaMedsTheme') }}">
				<div class="container">
					<div class="row">
						<div class="col-xl-6 col-lg-7 text-white">
							<h2 class="drop-shadow">Zeta Meds</h2>
							<p class="drop-shadow">We are dedicated to being consistently reliable while having only the highest quality FDA-approved products available. With the friendliest customer service, lowest rates, and superb product line, Zeta is here to be the last place you ever have to look for the remedies you need.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="slide-num-holder" id="snh-1"></div>
		</div>
	</section>
	<!-- Hero section end -->



	<!-- Features section -->
	<section class="features-section">
		<div class="container-fluid">
            <div class="row justify-content-center">
        <div class="col-7">
            <div class="row">
                <div class="col">
                    <div class="card card-body mt-5 mb-2 text-center">
                        <div class="feature-icon">
                            <img src="{{ asset('zetameds-theme/images/pencil-square-o.png', 'zetaMedsTheme') }}" alt="/img/icons/1.png">
                        </div>
                        <div class="feature-title">
                            <h3>Fill Out a Form</h3>
                        </div>
                        <div class="feature-description">
                            <small class="text-muted">Find the product you need and fill out a form letting us know your contact information and medical history. We can also handle your prescription.</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card card-body mb-2 mt-5 text-center">
                        <div class="feature-icon">
                            <img src="{{ asset('zetameds-theme/images/credit-card.png', 'zetaMedsTheme') }}" alt="/img/icons/1.png">
                        </div>
                        <div class="feature-title">
                            <h3>Make the Payment</h3>
                        </div>
                        <div class="feature-description">
                            <small class="text-muted">Receive a call from our contact services to confirm your order and we will process your order within a few days.</small>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card card-body mb-2 mt-5 text-center">
                        <div class="feature-icon">
                            <img src="{{ asset('zetameds-theme/images/home.png', 'zetaMedsTheme') }}" alt="/img/icons/1.png">
                        </div>
                        <div class="feature-title">
                            <h3>Receive your Package</h3>
                        </div>
                        <div class="feature-description">
                            <small class="text-muted">After order processing, expect to receive your order in 5-10 days with discrete packaging. Express shipping available upon request.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

		</div>
	</section>
	<!-- Features section end -->
{% endif %}

	<section class="top-letest-product-section">
		<div class="container">
            {% include '@SyliusShop/_flashes.html.twig' %}

            {{ sonata_block_render_event('sylius.shop.layout.before_content') }}
            {% block content %}
            {% endblock %}

            {{ sonata_block_render_event('sylius.shop.layout.after_content') }}
		</div>
	</section>

	<!-- Footer section -->
    {% block footer %}
        {% include '@SyliusShop/_footer.html.twig' %}
    {% endblock %}

	<!--====== Javascripts & Jquery ======-->
{% block javascripts %}
    {{ encore_entry_script_tags('app', null, 'zetaMedsTheme') }}

    {{ sonata_block_render_event('sylius.shop.layout.javascripts') }}
{% endblock %}

{{ sonata_block_render_event('sylius.shop.layout.after_body') }}

	</body>
</html>
