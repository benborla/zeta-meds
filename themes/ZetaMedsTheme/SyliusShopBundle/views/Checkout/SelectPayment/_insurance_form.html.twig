<form class="form-horizontal" title="Insurance Form">
    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Personal Information
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    {% include '@SyliusShop/Checkout/SelectPayment/partials/_personal_info.html.twig' %}
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header" id="headingTwo">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Health Insurance Information
                    </button>
                </h2>
            </div>

            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    {% include '@SyliusShop/Checkout/SelectPayment/partials/_health_info.html.twig' %}
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header" id="heading-doctors-info">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse-doctors-info" aria-expanded="false" aria-controls="collapse-doctors-info">
                        Doctors Information
                    </button>
                </h2>
            </div>

            <div id="collapse-doctors-info" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    {% include '@SyliusShop/Checkout/SelectPayment/partials/_doctors_info.html.twig' %}
                    <div class="float-right">
                        <button type="button" class="btn btn-danger btn-xs">Add</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Credit Card / Debit Card
                        </button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        {% include '@SyliusShop/Checkout/SelectPayment/partials/_card_info.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
