{% set current_path = app.request.get('_route') %}
<!DOCTYPE html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
<head>
    <title>{% block title %}Zeta Meds{% endblock %}</title>
	<meta charset="UTF-8">
	<meta name="description" content=" Divisima | eCommerce Template">
	<meta name="keywords" content="divisima, eCommerce, creative, html">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
    <link href="{{ asset('zetameds-theme/images/favicon.ico', 'zetaMedsTheme') }}" rel="shortcut icon"/>

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Raleway:300,300i,400,400i,700,700i" rel="stylesheet">


	<!-- Stylesheets -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('app', null, 'zetaMedsTheme') }}

        {{ sonata_block_render_event('sylius.shop.layout.stylesheets') }}
    {% endblock %}

    {{ sonata_block_render_event('sylius.shop.layout.head') }}


	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<body>
	<!-- Page Preloder -->
	<div id="preloder">
		<div class="loader"></div>
	</div>

	<!-- Header section -->
{% block header %}
    <div class="mb-2">
        <div class="container">
            <header class="my-4">
                {% include '@SyliusShop/_header.html.twig' %}

                {{ sonata_block_render_event('sylius.shop.layout.after_header') }}
            </header>
        </div>

        <div class="border-top border-bottom bg-primary">
            <div class="container">
                {{ render(url('sylius_shop_partial_taxon_index_by_code', {'code': 'category', 'template': '@SyliusShop/Taxon/_horizontalMenu.html.twig'})) }}
            </div>
        </div>
    </div>
{% endblock %}
{% if current_path == 'sylius_shop_homepage' %}
	<!-- Hero section -->
	<section class="hero-section">
		<div class="hero-slider owl-carousel">
			<div class="hs-item set-bg" data-setbg="{{ asset('zetameds-theme/images/banner-2-min.jpg', 'zetaMedsTheme') }}">
				<div class="container">
					<div class="row">
						<div class="col-xl-6 col-lg-7 text-white">
							<h2 class="h2 badge bg-primary">Zeta Meds</h2>
							<p class="h3 badge bg-primary">Why pay retail pharmacy prices when Zeta Meds can save you hundreds of dollars a year?</p>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item set-bg" data-setbg="{{ asset('zetameds-theme/images/banner-3-min.jpg', 'zetaMedsTheme') }}">
				<div class="container">
					<div class="row">
						<div class="col-xl-6 col-lg-7 text-white">
							<h2 class="h2 badge bg-primary">Zeta Meds</h2>
							<p class="h3 badge bg-primary">Never waste gas picking up your medication again. We deliver right to your doorstep.</p>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item set-bg" data-setbg="{{ asset('zetameds-theme/images/banner-1-min.jpg', 'zetaMedsTheme') }}">
				<div class="container">
					<div class="row">
						<div class="col-xl-6 col-lg-7 text-white">
							<h2 class="h2 badge bg-primary">Zeta Meds</h2>
							<p class="h3 badge bg-primary">Affordable medications shipped right to your door.</p>
					</div>
				</div>
			</div>
		</div>
        </div>
		<div class="container">
			<div class="slide-num-holder" id="snh-1"></div>
		</div>
	</section>
	<!-- Hero section end -->



	<!-- Features section -->
    <section class="our-service mt-5">
         <div class="container">
            <div class="row">
               <div class="col-xl-12">
                  <div class="section-title text-center mb-60">
                     <h4>How does it work?</h4>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-md-4 col-sm-12">
                  <div class="single_service service_right">
                      <img src="{{ asset('zetameds-theme/images/pencil-square-o.png', 'zetaMedsTheme') }}" />
                     <h4>Fill out a Form</h4>
                     <p>Find the product you need and fill out a form letting us know your contact information and medical history. We can also handle your prescription.</p>
                  </div>
                  <div class="single_service service_right">
                      <img src="{{ asset('zetameds-theme/images/home.png', 'zetaMedsTheme') }}" />
                     <h4>Receive your Package</h4>
                     <p>After order processing, expect to receive your order in 5-10 days with discrete packaging. Express shipping available upon request.</p>
                  </div>
               </div>
               <div class="col-md-4 col-sm-12 text-center">
                  <div class="single_mid">
                     <img src="http://infinityflamesoft.com/html/restarunt-preview/assets/img/service_mid.png" alt="">
                  </div>
               </div>
               <div class="col-md-4 col-sm-12">
                  <div class="single_service">
                      <img src="{{ asset('zetameds-theme/images/credit-card.png', 'zetaMedsTheme') }}" />
                     <h4>Make the Payment</h4>
                     <p>Receive a call from our contact services to confirm your order and we will process your order within a few days.</p>
                  </div>
                  <div class="single_service">
                      <img src="{{ asset('zetameds-theme/images/clock.png', 'zetaMedsTheme') }}" />
                     <h4>24/7 Service</h4>
                     <p>We are here to help you anytime</p>
                  </div>
               </div>
            </div>
         </div>
    </section>
	<!-- Features section end -->
{% endif %}

	<section class="top-letest-product-section">
		<div class="container">
            {% include '@SyliusShop/_flashes.html.twig' %}

            {{ sonata_block_render_event('sylius.shop.layout.before_content') }}
            {% block content %}
            {% endblock %}

            {{ sonata_block_render_event('sylius.shop.layout.after_content') }}
		</div>
	</section>

	<!-- Footer section -->
    {% block footer %}
        {% include '@SyliusShop/_footer.html.twig' %}
    {% endblock %}

	<!--====== Javascripts & Jquery ======-->
{% block javascripts %}
    {{ encore_entry_script_tags('app', null, 'zetaMedsTheme') }}

    {{ sonata_block_render_event('sylius.shop.layout.javascripts') }}
{% endblock %}

{{ sonata_block_render_event('sylius.shop.layout.after_body') }}

	</body>
</html>
