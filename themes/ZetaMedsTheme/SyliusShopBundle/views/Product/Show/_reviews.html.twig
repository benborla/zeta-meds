<div class="d-flex align-items-center">
    <div>{% include '@SyliusShop/Product/_starRating.html.twig' %}</div>
    <a href="{{ path('sylius_shop_product_review_index', {'slug': product.slug, '_locale': product.translation.locale}) }}" class="ml-3">{{ product.acceptedReviews|length }} {{ 'sylius.ui.reviews'|trans }}</a>
    {% if app.user %}
        <a href="{{ path('sylius_shop_product_review_create', {'slug': product.slug, '_locale': product.translation.locale}) }}" class="ml-3">{{ 'sylius.ui.add_your_review'|trans }}</a>
    {% else %}
    <a href="{{ path('sylius_shop_login') }}" class="ml-3">Logged-in to submit a review</a>
    {% endif %}
</div>
