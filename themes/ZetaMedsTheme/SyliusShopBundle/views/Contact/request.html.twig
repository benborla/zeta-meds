{% extends '@SyliusShop/layout.html.twig' %}
{% block title %}
Contact Us | Zeta Meds
{% endblock %}

{% form_theme form '@SyliusShop/Form/theme.html.twig' %}

{% import '@SyliusShop/Common/Macro/headers.html.twig' as headers %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-sm-12 offset-md-2">
            {{ headers.default('sylius.ui.contact_us'|trans, '', 'sylius.ui.use_the_contact_form_below_to_send_us_a_message'|trans) }}

            {{ sonata_block_render_event('sylius.shop.contact.request.after_content_header') }}

            <div>
                <div class="alert alert-danger d-none" role="alert" data-contact-us="error"></div>
                {{ form_start(form, {'action': path('sylius_shop_contact_request'), 'attr': {'class': 'loadable', 'novalidate': 'novalidate'}}) }}
                <div data-js-loading-overlay="true">
                    {{ form_row(form.email) }}
                    <div class="form-group">
                        <label for="sylius_contact_name" class="required">Name</label>
                        <input type="text" id="sylius_contact_name" name="sylius_contact[name]" required="required" class="form-control" value="">
                    </div>
                    {{ form_row(form.message) }}

                    {{ sonata_block_render_event('sylius.shop.contact.request.form', {'form': form}) }}

                    {{ form_row(form._token) }}
                    <button type="submit" class="btn btn-primary">{{ 'sylius.ui.send'|trans }}</button>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
